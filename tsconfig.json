{
  "compilerOptions": {
    "outDir": "./production",
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "es5",
      "es6",
      "es7"
    ],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "checkJs": true,
    "removeComments": true,
    "types": ["node", "klasa", "discord.js"],
    "moduleResolution": "node"
  },
  "include": ["config.ts", "index.ts", "./src/**/*"]
}
